---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageCtaStrip from "../../components/PageCtaStrip.astro";
import { getCollectionPageJsonLd } from "../../lib/seo";

const areas = [
  {
    slug: "/service-areas/carlsbad/",
    name: "Carlsbad, CA",
    summary:
      "Handyman visits for small to medium home projects in Carlsbad. Tidy work, clear expectations, and realistic timing.",
    popularProjects: [
      "Fence and gate repairs",
      "Drywall and trim touch-ups",
      "Lighting, fan, and TV updates",
    ],
  },
  {
    slug: "/service-areas/oceanside/",
    name: "Oceanside, CA",
    summary:
      "Electrical visits for small to medium home projects in Oceanside and nearby neighborhoods.",
    popularProjects: [
      "Lighting upgrades",
      "Switches, dimmers, and smart controls",
      "Troubleshooting simple non-code issues",
    ],
  },
  {
    slug: "/service-areas/encinitas/",
    name: "Encinitas, CA",
    summary:
      "Handyman visits for small and medium home projects across Encinitas communities.",
    popularProjects: [
      "Interior carpentry and woodwork",
      "Fixture swaps and small repairs",
      "Drywall patches and paint touch-ups",
    ],
  },
  {
    slug: "/service-areas/vista/",
    name: "Vista, CA",
    summary:
      "Visits focused on small to medium home projects in Vista, CA and nearby neighborhoods.",
    popularProjects: [
      "Honey-do lists and small repairs",
      "Plumbing fixture swaps",
      "Fence, gate, and exterior touch-ups",
    ],
  },
  {
    slug: "/service-areas/san-marcos/",
    name: "San Marcos, CA",
    summary:
      "Handyman services for townhomes, condos, and single-family homes in San Marcos, CA.",
    popularProjects: [
      "TV mounting and media walls",
      "Furniture assembly and installation",
      "Drywall, paint, and trim repairs",
    ],
  },
  {
    slug: "/service-areas/bressi-ranch/",
    name: "Bressi Ranch, CA",
    summary:
      "Handyman visits for homes in Bressi Ranch and nearby parts of Carlsbad. Good fit for punch lists, fixture swaps, and small repair projects.",
    popularProjects: [
      "Honey-do lists and small repairs",
      "Lighting, fan, and fixture updates",
      "Fence, gate, and exterior touch-ups",
    ],
  },
];

const serviceAreasCollectionJsonLd = JSON.stringify(
  getCollectionPageJsonLd({
    url: "/service-areas/",
    name: "Handyman service areas in North County San Diego",
    description:
      "Local handyman visits based in Carlsbad, CA and serving nearby North County San Diego communities. Travel is scoped so more of your visit goes toward actual repair and improvement work, with clear expectations about availability in each area.",
    items: areas.map((area) => ({
      name: area.name,
      url: area.slug,
    })),
  }),
);
---

<BaseLayout
  title="Handyman service areas in North County San Diego"
  description="Local handyman visits based in Carlsbad, CA and serving nearby North County San Diego communities. Travel is scoped so more of your visit goes toward actual repair and improvement work, with clear expectations about availability in each area."
>
  <script
    type="application/ld+json"
    slot="head"
    is:inline
    set:html={serviceAreasCollectionJsonLd}
  />

  <div class="bg-cf-page w-full">
    <div class="mx-auto max-w-6xl">
      <section
        class="from-cf-heroStart to-cf-heroEnd shadow-soft rounded-3xl bg-gradient-to-br p-[1px]"
      >
        <div class="text-cf-text rounded-3xl bg-white/95 p-8 md:p-10">
          <div class="space-y-4">
            <p class="eyebrow text-cf-heroEyebrow">
              Where we offer handyman visits
            </p>
            <h1 class="text-h1 leading-tight font-semibold">
              Handyman service areas in North County San Diego
            </h1>
            <p class="text-body-md text-cf-textMuted max-w-2xl">
              Visits are focused in North County communities based in and around
              Carlsbad, CA. Travel is scoped so more of your visit goes toward
              actual repair and improvement work, with clear expectations about
              availability in each area and the types of projects that are a
              good fit.
            </p>

            <div
              class="text-cf-textMuted mt-4 flex flex-wrap gap-2 text-[11px] font-semibold tracking-wide uppercase"
            >
              <span class="bg-cf-bg rounded-full px-3 py-1">Carlsbad, CA</span>
              <span class="bg-cf-bg rounded-full px-3 py-1">Oceanside, CA</span>
              <span class="bg-cf-bg rounded-full px-3 py-1">Encinitas, CA</span>
              <span class="bg-cf-bg rounded-full px-3 py-1">Vista, CA</span>
              <span class="bg-cf-bg rounded-full px-3 py-1">San Marcos, CA</span
              >
            </div>

            <div class="mt-5 flex flex-wrap gap-3">
              <a href="/services/" class="btn btn-primary btn-lg">
                View handyman services
              </a>
              <a
                href="#areas"
                class="text-cf-accentBlue shadow-soft hover:bg-cf-bg inline-flex items-center justify-center rounded-full bg-white px-4 py-2 text-sm font-semibold"
              >
                Browse service areas
              </a>
            </div>
          </div>
        </div>
      </section>

      <section id="areas" class="space-y-6">
        <header class="space-y-2">
          <p class="eyebrow">Neighborhood coverage</p>
          <h2 class="text-h2 text-cf-text font-semibold">
            Local option for small home projects
          </h2>
          <p class="text-body-sm text-cf-textMuted max-w-2xl">
            Each area below includes a mix of neighborhoods typically included,
            and the types of properties that are a good fit. Most projects are
            scoped so they can be completed in a single visit wherever possible,
            with larger projects broken into clear phases when needed.
          </p>
        </header>

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          {
            areas.map((area) => (
              <article class="card flex h-full flex-col justify-between">
                <div class="space-y-2">
                  <p class="text-cf-textMuted text-[11px] font-semibold tracking-wide uppercase">
                    Service area
                  </p>
                  <h3 class="text-cf-text text-base font-semibold">
                    {area.name}
                  </h3>
                  <p class="text-cf-textMuted text-sm">{area.summary}</p>

                  <div class="mt-3 space-y-1">
                    <p class="text-cf-textMuted text-[11px] font-semibold tracking-wide uppercase">
                      Popular services in this area
                    </p>
                    <ul class="text-cf-textMuted space-y-1 text-sm">
                      {area.popularProjects.map((project) => (
                        <li>â€¢ {project}</li>
                      ))}
                    </ul>
                  </div>
                </div>

                <div class="mt-4 flex items-center justify-between gap-3">
                  <a
                    href={area.slug}
                    class="text-cf-link text-sm font-semibold hover:underline"
                  >
                    View details for {area.name}
                  </a>
                  <a
                    href={`${area.slug}#request`}
                    class="btn btn-primary btn-sm text-xs whitespace-nowrap"
                  >
                    Request visit
                  </a>
                </div>
              </article>
            ))
          }
        </div>
      </section>

      <PageCtaStrip
        eyebrow="Next steps"
        title="Ready to see if your home is in our service area?"
        body="Share your address or general neighborhood, a short list of projects, and any helpful photos. You will receive clear next steps and a no-obligation estimate for your home in Carlsbad, CA or a nearby community."
      />
    </div>
  </div>
</BaseLayout>
