---
interface Props {
  service: {
    slug: string;
    name: string;
    shortDescription: string;
  };
  primaryAreaSlug: string;
  primaryAreaName: string;
  variant?: "global" | "local";
}

const {
  service,
  primaryAreaSlug,
  primaryAreaName,
  variant = "global",
} = Astro.props;

const primaryServiceUrl =
  variant === "local"
    ? `/service-areas/${primaryAreaSlug}/${service.slug}/`
    : `/services/${service.slug}/`;
---

<article class="card flex flex-col">
  <div class="flex items-start justify-between gap-3">
    <h2 class="text-cf-text text-sm font-semibold">
      <a href={primaryServiceUrl} class="hover:text-cf-accentBlue">
        {service.name}
      </a>
    </h2>
    <span
      class="bg-cf-accentBlueSoft text-cf-accentBlue inline-flex h-8 w-8 items-center justify-center rounded-full text-xs font-semibold"
    >
      âœ“
    </span>
  </div>
  <p class="text-body-sm mt-2 flex-1">
    {service.shortDescription}
  </p>
  <div class="text-cf-textMuted mt-4 flex items-center justify-between text-xs">
    <a
      href={primaryServiceUrl}
      class="text-cf-accentBlue font-semibold underline-offset-2 hover:underline"
    >
      Learn more about {service.name.toLowerCase()}
    </a>
    <a
      href={`/service-areas/${primaryAreaSlug}/${service.slug}/`}
      class="underline-offset-2 hover:underline"
    >
      In {primaryAreaName}
    </a>
  </div>
</article>
