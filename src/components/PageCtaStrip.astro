---
export interface Props {
  eyebrow?: string;
  title?: string;
  body?: string;
  primaryHref?: string;
  primaryLabel?: string;
  secondaryHref?: string;
  secondaryLabel?: string;
}

const {
  eyebrow = "Get started",
  title = "Ready to check off your list?",
  body = "Share your project details, location, and photos for a clear, no-obligation estimate.",
  primaryHref = "/contact/",
  primaryLabel = "Request an estimate",
  secondaryHref = "tel:+18082266681",
  secondaryLabel = "Call or text (808) 226-6681",
} = Astro.props;
---

<section class="rounded-3xl bg-amber-50 px-5 py-6 md:px-7 md:py-7">
  <div
    class="flex flex-col items-start gap-4 md:flex-row md:items-center md:justify-between"
  >
    <div class="space-y-2">
      <p class="eyebrow">
        {eyebrow}
      </p>
      <h2 class="text-cf-text text-lg font-semibold">
        {title}
      </h2>
      <p class="text-cf-textMuted text-sm">
        {body}
      </p>
    </div>
    <div class="flex flex-wrap gap-3">
      <a href={primaryHref} class="btn-primary text-sm">
        {primaryLabel}
      </a>
      <a
        href={secondaryHref}
        class="border-cf-accentBlueSoft to-cf-accentBlueSoft/40 text-cf-accentBlue shadow-soft hover:to-cf-accentBlueSoft/70 inline-flex items-center justify-center rounded-full border bg-gradient-to-r from-white px-5 py-2 text-sm font-semibold hover:from-white"
      >
        {secondaryLabel}
      </a>
    </div>
  </div>
</section>
