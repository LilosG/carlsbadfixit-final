---
export interface Props {
  locationLabel?: string;
  heading?: string;
  body?: string;
}

const {
  locationLabel = "North County San Diego",
  heading = "Local, licensed, and focused on small home projects",
  body = `Carlsbad Fix It provides professional handyman visits for homeowners who want clear expectations, tidy work, and reliable follow-through. Each visit is planned around a realistic scope so you know exactly what will be completed.`,
} = Astro.props;
---

<section class="shadow-soft rounded-3xl bg-white p-6 md:p-8">
  <div class="space-y-4">
    <div class="space-y-2">
      <p class="eyebrow text-cf-textMuted">Experience &amp; trust</p>
      <h2 class="text-h2 text-cf-text font-semibold">{heading}</h2>
      <p class="text-body-sm text-cf-textMuted max-w-3xl">
        {body}
      </p>
    </div>

    <ul class="text-cf-text grid gap-3 text-sm sm:grid-cols-2">
      <li class="flex gap-2">
        <span
          class="bg-cf-sandSoft text-cf-primary mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-[11px] font-semibold"
        >
          ✓
        </span>
        <span>Licensed and insured local handyman serving {locationLabel}.</span
        >
      </li>
      <li class="flex gap-2">
        <span
          class="bg-cf-sandSoft text-cf-primary mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-[11px] font-semibold"
        >
          ✓
        </span>
        <span>Clear scope, timing, and pricing before work begins.</span>
      </li>
      <li class="flex gap-2">
        <span
          class="bg-cf-sandSoft text-cf-primary mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-[11px] font-semibold"
        >
          ✓
        </span>
        <span>Surfaces protected, tidy work areas, and a clean finish.</span>
      </li>
      <li class="flex gap-2">
        <span
          class="bg-cf-sandSoft text-cf-primary mt-1 inline-flex h-5 w-5 items-center justify-center rounded-full text-[11px] font-semibold"
        >
          ✓
        </span>
        <span>Honest guidance when a specialist is the better fit.</span>
      </li>
    </ul>

    <div class="flex flex-wrap gap-3 text-sm">
      <a href="/about/" class="btn-primary"> About Carlsbad Fix It </a>
      <a
        href="/services/"
        class="bg-cf-sandSoft text-cf-text hover:bg-cf-card inline-flex items-center rounded-full px-4 py-2 font-semibold"
      >
        Explore services
      </a>
      <a
        href="/service-areas/"
        class="bg-cf-sandSoft text-cf-text hover:bg-cf-card inline-flex items-center rounded-full px-4 py-2 font-semibold"
      >
        View service areas
      </a>
      <a
        href="/contact/"
        class="text-cf-accentBlue hover:text-cf-accentBlue/80 inline-flex items-center font-semibold"
      >
        Request a quote
      </a>
    </div>
  </div>
</section>
