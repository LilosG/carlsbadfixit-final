---
import BaseLayout from "../layouts/BaseLayout.astro";
import { services } from "../data/services";
import { serviceAreas } from "../data/service-areas";
import ServiceCard from "../components/ServiceCard.astro";
import AreaCard from "../components/AreaCard.astro";

const primaryArea = serviceAreas.find((area) => area.primary) ?? serviceAreas[0];

const processSteps = [
  {
    step: "1",
    title: "Request an estimate",
    body: "Share your punch list or project details online and include photos if you can."
  },
  {
    step: "2",
    title: "Schedule your service",
    body: "Pick a time that works for you and get clear expectations before we arrive."
  },
  {
    step: "3",
    title: "We fix it right",
    body: "Professional, tidy work with attention to detail on every task."
  },
  {
    step: "4",
    title: "Final walkthrough",
    body: "Review the work together and make sure everything looks and works as it should."
  }
];

const testimonials = [
  {
    name: "Sarah M.",
    location: "Carlsbad, CA",
    text: "Showed up on time, fixed our drywall and a few small items in one visit. Very easy to work with.",
    source: "Homeowner (placeholder)"
  },
  {
    name: "David R.",
    location: "Encinitas, CA",
    text: "Clear estimate, no surprises, and everything was cleaned up before they left. Highly recommend.",
    source: "Homeowner (placeholder)"
  },
  {
    name: "Rachel K.",
    location: "Vista, CA",
    text: "Our go-to for small repairs and maintenance between tenants. Reliable and professional.",
    source: "Small landlord (placeholder)"
  }
];

const featuredProjects = [
  {
    title: "Carlsbad carpentry and drywall refresh",
    location: "Carlsbad",
    summary: "Framed a small wall section, patched drywall, and installed new trim for a clean, updated look.",
    url: "#"
  },
  {
    title: "Oceanside lighting and TV setup",
    location: "Oceanside",
    summary: "Installed new lighting, mounted a TV, and organized cabling in a living room update.",
    url: "#"
  },
  {
    title: "Vista plumbing fixtures update",
    location: "Vista",
    summary: "Replaced faucets, shower heads, and a vanity to modernize a bathroom.",
    url: "#"
  }
];

const areasForGrid = serviceAreas;
const servicesForGrid = services;

const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "HomeAndConstructionBusiness",
  "name": "Carlsbad Fix It",
  "url": "https://carlsbadfixit.com/",
  "telephone": "+1-808-226-6681",
  "description":
    "Local handyman for home repairs, installations, and maintenance in Carlsbad and nearby North County San Diego communities.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "3027 Greenwich St.",
    "addressLocality": "Carlsbad",
    "addressRegion": "CA",
    "postalCode": "92010",
    "addressCountry": "US"
  },
  "areaServed": serviceAreas.map((area) => area.label)
};

const localBusinessJsonLd = JSON.stringify(localBusinessSchema);
---

<BaseLayout
  title="Handyman Services You Can Trust in Carlsbad | Carlsbad Fix It"
  description="Carlsbad Fix It provides expert handyman services in Carlsbad and North County San Diego, including carpentry, electrical, plumbing, furniture assembly, and honey-do lists."
>
  <script type="application/ld+json" slot="head">
    {localBusinessJsonLd}
  </script>

  <section class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-cf-accentBlue via-sky-700 to-cf-primary px-6 py-8 text-white shadow-card">
    <div class="pointer-events-none absolute inset-0 opacity-25">
      <div class="absolute -left-32 -top-24 h-72 w-72 rounded-full bg-white/15 blur-3xl"></div>
      <div class="absolute bottom-[-6rem] right-[-4rem] h-80 w-80 rounded-full bg-amber-300/25 blur-3xl"></div>
    </div>

    <div class="relative z-10 grid gap-10 lg:grid-cols-[minmax(0,1.4fr)_minmax(0,1.1fr)] lg:items-start">
      <div class="space-y-6">
        <p class="eyebrow text-amber-200">
          Local handyman • North County San Diego
        </p>
        <h1 class="max-w-xl text-display font-semibold tracking-tight text-white">
          Handyman services you can trust in {primaryArea.name}
        </h1>
        <p class="max-w-xl text-sm leading-relaxed text-sky-100">
          From carpentry and electrical to plumbing fixtures, furniture assembly, and honey-do lists, Carlsbad Fix It
          delivers quality workmanship with tidy results. Proudly serving {primaryArea.label} and nearby coastal North County communities.
        </p>
        <div class="flex flex-wrap items-center gap-3">
          <a href="#hero-form" class="btn-primary text-xs">
            Request free estimate
          </a>
          <a href="tel:+18082266681" class="btn-ghost text-xs text-white">
            Call or text (808) 226-6681
          </a>
        </div>
        <div class="flex flex-wrap items-center gap-x-6 gap-y-3 text-[11px] text-sky-100">
          <div class="inline-flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-emerald-300"></span>
            <span>Licensed and insured</span>
          </div>
          <div class="inline-flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-amber-300"></span>
            <span>Locally owned in Carlsbad</span>
          </div>
          <div class="inline-flex items-center gap-2">
            <span class="h-2 w-2 rounded-full bg-sky-300"></span>
            <span>Focused on small home projects</span>
          </div>
        </div>
      </div>

      <div class="flex justify-end">
        <div
          id="hero-form"
          class="w-full max-w-md rounded-2xl bg-white p-5 text-cf-text shadow-cta"
        >
          <p class="text-xs font-semibold uppercase tracking-wide text-cf-textMuted">
            Get your estimate started
          </p>
          <h2 class="mt-2 text-base font-semibold text-cf-text">
            Tell us about your project in {primaryArea.label}
          </h2>
          <p class="mt-1 text-xs text-cf-textMuted">
            Share a few details and we will follow up with clear next steps and a no-obligation estimate, usually within one business day.
          </p>
          <form class="mt-4 grid gap-3">
            <div class="grid gap-3 sm:grid-cols-2">
              <div class="space-y-1">
                <label for="hero-name" class="text-[11px] font-medium text-cf-text">Name</label>
                <input
                  id="hero-name"
                  type="text"
                  class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-cf-text outline-none ring-cf-accentBlue focus:border-cf-accentBlue focus:ring-1"
                  placeholder="Your name"
                />
              </div>
              <div class="space-y-1">
                <label for="hero-phone" class="text-[11px] font-medium text-cf-text">Phone</label>
                <input
                  id="hero-phone"
                  type="tel"
                  class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-cf-text outline-none ring-cf-accentBlue focus:border-cf-accentBlue focus:ring-1"
                  placeholder="Best number to reach you"
                />
              </div>
            </div>
            <div class="grid gap-3 sm:grid-cols-2">
              <div class="space-y-1">
                <label for="hero-email" class="text-[11px] font-medium text-cf-text">Email</label>
                <input
                  id="hero-email"
                  type="email"
                  class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-cf-text outline-none ring-cf-accentBlue focus:border-cf-accentBlue focus:ring-1"
                  placeholder="you@example.com"
                />
              </div>
              <div class="space-y-1">
                <label for="hero-city" class="text-[11px] font-medium text-cf-text">City</label>
                <input
                  id="hero-city"
                  type="text"
                  class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-cf-text outline-none ring-cf-accentBlue focus:border-cf-accentBlue focus:ring-1"
                  placeholder={primaryArea.label}
                />
              </div>
            </div>
            <div class="space-y-1">
              <label for="hero-details" class="text-[11px] font-medium text-cf-text">Project details</label>
              <textarea
                id="hero-details"
                rows={3}
                class="w-full rounded-lg border border-slate-200 bg-white px-3 py-2 text-xs text-cf-text outline-none ring-cf-accentBlue focus:border-cf-accentBlue focus:ring-1"
                placeholder="Briefly describe the work you need help with"
              ></textarea>
            </div>
            <button
              type="submit"
              class="btn-primary mt-1 w-full text-xs"
            >
              Submit request
            </button>
            <p class="text-[10px] text-cf-textMuted">
              This form is a visual placeholder and will be connected to your preferred email or form provider.
              You can also use the dedicated contact page for a full form.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES (CARD LAYOUT) -->
  <section class="rounded-3xl bg-amber-50 px-4 py-8 sm:px-6 md:px-8">
    <div class="mx-auto max-w-5xl space-y-6">
      <div class="space-y-2 text-center">
        <p class="eyebrow">
          Services
        </p>
        <h2>
          Expert handyman services
        </h2>
        <p class="text-sm text-slate-600">
          Core services built around what North County homeowners request most, with room for custom projects and punch lists.
        </p>
      </div>
      <div class="grid gap-5 md:grid-cols-2 lg:grid-cols-3">
        {servicesForGrid.map((service) => (
          <ServiceCard
            service={service}
            primaryAreaSlug={primaryArea.slug}
            primaryAreaName={primaryArea.name}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- PROCESS -->
  <section class="space-y-6">
    <div class="space-y-2 text-center">
      <p class="eyebrow">
        How we work
      </p>
      <h2>
        A simple, four-step process
      </h2>
      <p class="text-sm text-slate-600">
        Clear communication, tidy work, and a dependable experience from first call to final walkthrough.
      </p>
    </div>
    <div class="grid gap-5 md:grid-cols-4">
      {processSteps.map((item) => (
        <div class="flex flex-col items-start rounded-2xl border border-slate-200 bg-white p-4 text-left shadow-sm">
          <div class="mb-2 inline-flex h-8 w-8 items-center justify-center rounded-full bg-sky-50 text-xs font-semibold text-sky-700">
            {item.step}
          </div>
          <h3 class="text-sm font-semibold text-slate-900">
            {item.title}
          </h3>
          <p class="mt-2 text-xs text-slate-600">
            {item.body}
          </p>
        </div>
      ))}
    </div>
  </section>

  <!-- BEFORE / AFTER -->
  <section class="rounded-3xl bg-orange-50 px-4 py-8 sm:px-6 md:px-8">
    <div class="mx-auto max-w-5xl space-y-6">
      <div class="space-y-2 text-center">
        <p class="eyebrow">
          Results
        </p>
        <h2>
          Real results you can see
        </h2>
        <p class="text-sm text-slate-600">
          Attention to detail and consistent quality on every project, large or small.
        </p>
      </div>
      <div class="relative mx-auto max-w-3xl">
        <div class="flex overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-sm">
          <div class="flex-1 border-r border-slate-100 bg-slate-100">
            <div class="flex h-full flex-col items-center justify-center px-4 py-10 text-center text-xs text-slate-500">
              <span class="mb-2 rounded-full bg-slate-900/80 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-white">
                Before
              </span>
              <p>
                Wall damage, outdated fixtures, and unfinished repairs. We document the issues so you know exactly what will be fixed.
              </p>
            </div>
          </div>
          <div class="flex-1 bg-slate-50">
            <div class="flex h-full flex-col items-center justify-center px-4 py-10 text-center text-xs text-slate-500">
              <span class="mb-2 rounded-full bg-sky-600 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-white">
                After
              </span>
              <p>
                Clean, finished work that blends with existing textures and paint, leaving your home ready to enjoy.
              </p>
            </div>
          </div>
        </div>
        <div class="absolute inset-y-6 left-1/2 flex -translate-x-1/2 items-center justify-center">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-white shadow-lg ring-1 ring-slate-200">
            <span class="text-xs font-semibold text-slate-600">⇆</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURED PROJECTS -->
  <section class="space-y-6">
    <div class="flex flex-wrap items-end justify-between gap-4">
      <div class="space-y-2">
        <p class="eyebrow">
          Projects
        </p>
        <h2>
          Featured handyman projects
        </h2>
        <p class="text-sm text-slate-600">
          A snapshot of the kinds of projects Carlsbad Fix It handles for homeowners across North County.
        </p>
      </div>
    </div>
    <div class="grid gap-5 md:grid-cols-3">
      {featuredProjects.map((project) => (
        <article class="flex flex-col rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="aspect-video rounded-xl bg-slate-100"></div>
          <div class="mt-4 space-y-1">
            <h3 class="text-sm font-semibold text-slate-900">
              {project.title}
            </h3>
            <p class="text-xs font-medium text-slate-500">
              {project.location}, CA
            </p>
            <p class="mt-1 text-xs text-slate-600">
              {project.summary}
            </p>
          </div>
          <div class="mt-3 text-[11px]">
            <a href={project.url} class="font-semibold text-sky-700 underline-offset-2 hover:underline">
              View details
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- TESTIMONIALS -->
  <section class="space-y-6">
    <div class="space-y-2 text-center">
      <p class="eyebrow">
        Testimonials
      </p>
      <h2>
        What our customers say
      </h2>
      <p class="text-sm text-slate-600">
        Real feedback from North County homeowners and property owners.
      </p>
    </div>
    <div class="grid gap-5 md:grid-cols-3">
      {testimonials.map((t) => (
        <article class="flex h-full flex-col rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
          <div class="flex items-center gap-1 text-[11px] text-amber-500">
            <span>★</span>
            <span>★</span>
            <span>★</span>
            <span>★</span>
            <span>★</span>
          </div>
          <p class="mt-3 flex-1 text-xs text-slate-700">
            {t.text}
          </p>
          <div class="mt-4 space-y-1 text-xs">
            <p class="font-semibold text-slate-900">
              {t.name}
            </p>
            <p class="text-slate-500">{t.location}</p>
            <p class="text-[11px] text-slate-400">{t.source}</p>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- SERVICE AREAS (CARD LAYOUT) -->
  <section class="rounded-3xl bg-amber-50 px-4 py-8 sm:px-6 md:px-8">
    <div class="mx-auto max-w-5xl space-y-6">
      <div class="space-y-2 text-center">
        <p class="eyebrow">
          Service areas
        </p>
        <h2>
          Proudly serving North County San Diego
        </h2>
        <p class="text-sm text-slate-600">
          Local service for coastal and nearby inland communities. If you do not see your city listed, you can still reach out to check availability.
        </p>
      </div>
      <div class="grid gap-4 md:grid-cols-3">
        {areasForGrid.map((area) => (
          <AreaCard area={area} />
        ))}
      </div>
    </div>
  </section>

  <!-- HOME INLINE FORM + WHY CHOOSE -->
  <section class="grid gap-8 -mt-4 md:grid-cols-[minmax(0,1.6fr)_minmax(0,1.1fr)] md:items-start">
    <div class="space-y-4 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
      <p class="eyebrow">
        Get started
      </p>
      <h2 class="text-2xl font-semibold tracking-tight text-slate-900">
        Request your free estimate
      </h2>
      <p class="text-sm text-slate-600">
        Tell us a bit about your project and where you are located. You will receive clear next steps and a no-obligation estimate.
      </p>
      <form class="mt-2 grid gap-4 md:grid-cols-2">
        <div class="space-y-1 md:col-span-1">
          <label for="home-name" class="text-xs font-medium text-slate-800">Name</label>
          <input
            id="home-name"
            type="text"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-xs outline-none ring-sky-500 focus:border-sky-500 focus:ring-1"
            placeholder="Your name"
          />
        </div>
        <div class="space-y-1 md:col-span-1">
          <label for="home-phone" class="text-xs font-medium text-slate-800">Phone</label>
          <input
            id="home-phone"
            type="tel"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-xs outline-none ring-sky-500 focus:border-sky-500 focus:ring-1"
            placeholder="Best number to reach you"
          />
        </div>
        <div class="space-y-1 md:col-span-1">
          <label for="home-email" class="text-xs font-medium text-slate-800">Email</label>
          <input
            id="home-email"
            type="email"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-xs outline-none ring-sky-500 focus:border-sky-500 focus:ring-1"
            placeholder="you@example.com"
          />
        </div>
        <div class="space-y-1 md:col-span-1">
          <label for="home-city" class="text-xs font-medium text-slate-800">City</label>
          <input
            id="home-city"
            type="text"
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-xs outline-none ring-sky-500 focus:border-sky-500 focus:ring-1"
            placeholder={primaryArea.label}
          />
        </div>
        <div class="space-y-1 md:col-span-2">
          <label for="home-details" class="text-xs font-medium text-slate-800">Project details</label>
          <textarea
            id="home-details"
            rows={4}
            class="w-full rounded-lg border border-slate-300 px-3 py-2 text-xs outline-none ring-sky-500 focus:border-sky-500 focus:ring-1"
            placeholder="Briefly describe the work you need help with"
          ></textarea>
        </div>
        <div class="md:col-span-2">
          <button
            type="submit"
            class="btn-primary w-full"
          >
            Submit request
          </button>
          <p class="mt-2 text-[11px] text-slate-500">
            This form is a visual placeholder and will be connected to your preferred email or form provider.
            You can also use the dedicated contact page for a full form.
          </p>
        </div>
      </form>
    </div>
    <aside class="space-y-4 rounded-3xl bg-amber-50 p-6">
      <p class="eyebrow">
        Why choose Carlsbad Fix It?
      </p>
      <h2 class="text-lg font-semibold text-slate-900">
        Licensed, insured, and focused on the small jobs that matter.
      </h2>
      <ul class="space-y-2 text-sm text-slate-700">
        <li>Local handyman based in Carlsbad, serving North County San Diego.</li>
        <li>Clear communication and upfront pricing before any work begins.</li>
        <li>Respect for your home with tidy, careful work on every visit.</li>
        <li>Flexible scheduling for punch lists, turnovers, and recurring maintenance.</li>
      </ul>
      <div class="rounded-2xl bg-white p-4 shadow-sm">
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-700">
          Call or text
        </p>
        <p class="mt-1 text-lg font-semibold text-sky-700">
          (808) 226-6681
        </p>
        <p class="mt-1 text-[11px] text-slate-500">
          Typical response during normal business hours.
        </p>
      </div>
    </aside>
  </section>
</BaseLayout>
